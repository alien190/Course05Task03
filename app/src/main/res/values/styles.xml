<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/hideViewStyle</item>

    </style>

    <style name="hideViewStyle">
        <item name="android:visibility">@integer/view_gone</item>
    </style>

    <style name="separateLine">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="separateLineThin">
        <item name="android:background">@color/colorPrimaryBigOpacity</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="captionTextStyle" parent="baseTextStyle">
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="baseTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/circular_std_book</item>
    </style>
</resources>
